---
import { getUpcomingEvents, generateEventUrl } from '../data/events';
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang?: 'pl' | 'en';
}

const { lang = 'pl' } = Astro.props;
const t = getTranslations(lang);

const upcomingEvents = getUpcomingEvents();

const formatTime = (time: string) => {
  return new Date(`2000-01-01T${time}`).toLocaleTimeString(lang === 'pl' ? 'pl-PL' : 'en-US', {
    hour: 'numeric',
    minute: '2-digit',
    hour12: false
  });
};
---

<section id="events" class="py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{t.events.title}</h2>
      <p class="text-xl text-gray-600">{t.events.subtitle}</p>
    </div>
    
    <!-- Upcoming Events -->
    <div class="mb-16">
      <h3 class="text-2xl font-bold text-gray-900 mb-8 flex items-center">
        <span class="w-1 h-8 mr-3 rounded-full" style="background-color: #29B7C0;"></span>
        {t.events.upcoming}
      </h3>
      
      <div class="grid md:grid-cols-2 gap-6">
        {upcomingEvents.map((event, index) => (
          <a
            href={generateEventUrl(event, lang)}
            class="block bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group cursor-pointer"
          >
            <!-- Map at the top -->
            <div class="h-48 bg-gray-100 relative overflow-hidden">
              <div id={`event-map-${index}`} class="w-full h-full"></div>
            </div>

            <div class="p-8">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center text-sm text-gray-500">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  {event.date}
                </div>
                <div class="flex items-center text-sm text-gray-500">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  {formatTime(event.time)} - {formatTime(event.endTime)}
                </div>
              </div>

              <h4 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors duration-200">
                {t.events.meetup} #{event.meetupId}
              </h4>

              <div class="text-gray-600 mb-4 space-y-1">
                {event.presentations && event.presentations.map(presentation => (
                  <div class="text-sm">
                    - {presentation.title}
                  </div>
                ))}
              </div>

              <div class="flex items-start mb-6">
                <svg class="w-4 h-4 text-gray-400 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div class="text-sm text-gray-600">
                  <div class="font-medium">{event.location.name}</div>
                  <div>{event.location.address}</div>
                  <div>{event.location.zipCode ? `${event.location.zipCode} ` : ''}{event.location.city}</div>
                </div>
              </div>

              <div class="flex flex-wrap gap-2">
                {event.tags.slice(0, 2).map(tag => (
                  <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">
                    #{tag}
                  </span>
                ))}
                {event.tags.length > 2 && (
                  <span class="text-xs text-gray-500">
                    +{event.tags.length - 2} {t.events.more}
                  </span>
                )}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>

  </div>
</section>

<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script define:vars={{ upcomingEvents }}>
  document.addEventListener('DOMContentLoaded', function() {
    upcomingEvents.forEach((event, index) => {
      const address = `${event.location.address}, ${event.location.city}`;

      // Use geocoding service to get coordinates
      fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(address)}`)
        .then(response => response.json())
        .then(data => {
          if (data && data.length > 0) {
            const lat = parseFloat(data[0].lat);
            const lon = parseFloat(data[0].lon);

            // Initialize the map
            const map = L.map(`event-map-${index}`, {
              dragging: false,
              zoomControl: false,
              scrollWheelZoom: false,
              doubleClickZoom: false,
              touchZoom: false
            }).setView([lat, lon], 15);

            // Add OpenStreetMap tiles
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
              attribution: '© <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            // Add a marker for the event location
            L.marker([lat, lon])
              .addTo(map)
              .bindPopup(`
                <div style="text-align: center;">
                  <strong>${event.location.name}</strong><br/>
                  ${event.location.address}
                </div>
              `);
          } else {
            // Fallback: show a default map centered on Warsaw
            const map = L.map(`event-map-${index}`, {
              dragging: false,
              zoomControl: false,
              scrollWheelZoom: false,
              doubleClickZoom: false,
              touchZoom: false
            }).setView([52.2297, 21.0122], 13);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
              attribution: '© <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
          }
        })
        .catch(error => {
          console.error('Error geocoding address:', error);
          // Fallback map
          const map = L.map(`event-map-${index}`, {
            dragging: false,
            zoomControl: false,
            scrollWheelZoom: false,
            doubleClickZoom: false,
            touchZoom: false
          }).setView([52.2297, 21.0122], 13);

          L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
          }).addTo(map);
        });
    });
  });
</script>

<style>
  .leaflet-container {
    border-radius: 0;
  }
</style>