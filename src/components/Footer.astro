---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang?: 'pl' | 'en';
}

const { lang = 'pl' } = Astro.props;
const t = getTranslations(lang);
const currentYear = new Date().getFullYear();

const footerLinks = {
  [t.footer.quickLinks]: [
    { href: '/', label: t.footer.links.home },
    { href: lang === 'en' ? '/en/events' : '/events', label: t.footer.links.events },
  ],
  [t.footer.community]: [
    { href: lang === 'en' ? '/en/code-of-conduct' : '/code-of-conduct', label: t.footer.links.codeOfConduct },
  ],
};
---

<footer class="text-gray-300" style="background-color: #0E2337;">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid md:grid-cols-5 gap-8">
      <div class="md:col-span-2">
        <div class="mb-4">
          <img
            src="/images/logo-dark.png"
            alt="Warsaw Software Architecture Group Logo"
            class="h-20 w-auto"
          />
        </div>
        <p class="text-sm mb-4">
          {t.footer.description}
        </p>
        <div class="bg-[#1a3a52] rounded-xl p-6 mb-4">
          <p class="text-lg font-bold text-white mb-2">
            {lang === 'pl' ? 'Skontaktuj się z nami!' : 'Contact us!'}
          </p>
          <p class="text-sm text-gray-300 mb-3">
            {lang === 'pl' ? 'Napisz do nas na LinkedIn!' : 'Write to us on LinkedIn!'}
          </p>
          <a
            href="https://www.linkedin.com/company/warsaw-software-architecture-group/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-white hover:text-gray-300 transition-colors duration-200"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
            {lang === 'pl' ? 'Odwiedź nasz LinkedIn' : 'Visit our LinkedIn'}
          </a>
        </div>
      </div>
      
      {Object.entries(footerLinks).map(([category, links]) => (
        <div>
          <h3 class="text-white font-semibold mb-4">{category}</h3>
          <ul class="space-y-2">
            {links.map(link => (
              <li>
                <a href={link.href} class="text-sm hover:text-white transition-colors duration-200">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-sm">
          © {currentYear} Warsaw Software Architecture Group. {t.footer.copyright}
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a href={lang === 'en' ? '/en/privacy' : '/privacy'} class="text-sm hover:text-white transition-colors duration-200">{t.footer.links.privacy}</a>
          <a href={lang === 'en' ? '/en/code-of-conduct' : '/code-of-conduct'} class="text-sm hover:text-white transition-colors duration-200">{t.footer.links.codeOfConduct}</a>
        </div>
      </div>
    </div>
  </div>
</footer>