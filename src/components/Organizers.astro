---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang?: 'pl' | 'en';
}

const { lang = 'pl' } = Astro.props;
const t = getTranslations(lang);

const organizers = [
  {
    name: 'Tomasz Ducin',
    role: 'Co-Founder & Lead Organizer',
    bio: 'Independent Software Engineer, Architect, Trainer and Conference Speaker. JavaScript/TypeScript expert with 100+ talks across Europe.',
    linkedin: 'https://www.linkedin.com/in/tomasz-ducin-82234a4b/',
    github: 'https://github.com/ducin',
    twitter: 'https://twitter.com/tomasz_ducin',
    website: 'https://ducin.dev',
    photo: '/images/tomasz-ducin.jpg'
  },
  {
    name: 'Kamil Kie≈Çbasa',
    role: 'Co-Founder & Lead Organizer',
    bio: 'Full-Stack Developer and technical blogger at bd90.pl. Specializes in .NET Core, Docker, and cloud technologies with focus on practical software development.',
    linkedin: 'https://www.linkedin.com/in/kamil-kie%C5%82basa-3b3454155/',
    github: 'https://github.com/kamil-kielbasa',
    twitter: '#',
    website: 'https://bd90.pl',
    photo: '/images/kamil-kielbasa.jpg'
  },
];
---

<section id="organizers" class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">{t.organizers.title}</h2>
      <p class="text-lg text-gray-600">{t.organizers.subtitle}</p>
    </div>

    <div class="grid md:grid-cols-2 gap-6 max-w-3xl mx-auto">
      {organizers.map((organizer, index) => (
        <div class="flex items-start gap-4 group">
          <div class="relative overflow-hidden rounded-xl flex-shrink-0">
            {organizer.photo ? (
              <div class="w-24 h-24 relative">
                <img
                  src={organizer.photo}
                  alt={organizer.name}
                  class="w-full h-full object-cover"
                />
              </div>
            ) : (
              <div class="w-24 h-24 bg-gradient-to-br from-blue-400 via-indigo-500 to-purple-600">
                <div class="w-full h-full flex items-center justify-center">
                  <span class="text-white text-2xl font-bold opacity-50">
                    {organizer.name.split(' ').map(n => n[0]).join('')}
                  </span>
                </div>
              </div>
            )}
          </div>

          <div class="flex-1 min-w-0">
            <h3 class="text-lg font-bold text-gray-900 mb-1">{organizer.name}</h3>
            <p class="text-xs text-blue-600 font-medium mb-2">{organizer.role}</p>
            <p class="text-gray-600 text-sm mb-3 line-clamp-2">{organizer.bio}</p>

            <div class="flex space-x-2">
              {organizer.linkedin && organizer.linkedin !== '#' && (
                <a href={organizer.linkedin} class="text-gray-400 hover:text-blue-600 transition-colors duration-200">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </a>
              )}
              {organizer.github && organizer.github !== '#' && (
                <a href={organizer.github} class="text-gray-400 hover:text-gray-900 transition-colors duration-200">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
              {organizer.twitter && organizer.twitter !== '#' && (
                <a href={organizer.twitter} class="text-gray-400 hover:text-blue-400 transition-colors duration-200">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>