---
export interface Props {
  lang?: 'pl' | 'en';
}

const { lang = 'pl' } = Astro.props;
---

<section id="partners" class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-10">
      <h2 class="text-2xl font-bold text-gray-900 mb-2">
        {lang === 'pl' ? 'Partner miejsca' : 'Venue Partner'}
      </h2>
      <p class="text-gray-600">
        {lang === 'pl' ? 'Dziękujemy za udostępnienie przestrzeni na nasze spotkania' : 'Thank you for providing space for our meetups'}
      </p>
    </div>

    <div class="flex justify-center">
      <a
        href="https://www.circlek.pl/"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow duration-200"
      >
        <img
          src="/images/circle-k-logo.png"
          alt="Circle K Logo"
          class="h-16 w-auto"
        />
      </a>
    </div>
  </div>
</section>