---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang?: 'pl' | 'en';
}

const { lang = 'pl' } = Astro.props;
const t = getTranslations(lang);
---

<section id="location" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{t.location.title}</h2>
      <p class="text-xl text-gray-600">{t.location.subtitle}</p>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-12 items-start">
      <div>
        <div class="bg-gray-50 rounded-2xl p-8 mb-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">{t.location.venueDetails}</h3>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <h4 class="font-semibold text-gray-900">{t.location.venueName}</h4>
                <p class="text-gray-600">{t.location.venueAddress1}</p>
                <p class="text-gray-600">{t.location.venueAddress2}</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <div>
                <h4 class="font-semibold text-gray-900">{t.location.contact}</h4>
                <p class="text-gray-600">{t.location.phone}</p>
                <p class="text-gray-600">{t.location.email}</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h4 class="font-semibold text-gray-900">{t.location.meetingTime}</h4>
                <p class="text-gray-600">{t.location.meetingSchedule}</p>
                <p class="text-gray-600">{t.location.meetingHours}</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-xl p-6">
            <svg class="w-8 h-8 text-blue-600 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
            </svg>
            <h4 class="font-semibold text-gray-900">{t.location.metro}</h4>
            <p class="text-sm text-gray-600 mt-1">{t.location.metroDesc}</p>
          </div>
          
          <div class="bg-gradient-to-br from-green-50 to-emerald-100 rounded-xl p-6">
            <svg class="w-8 h-8 text-green-600 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V2"></path>
            </svg>
            <h4 class="font-semibold text-gray-900">{t.location.parking}</h4>
            <p class="text-sm text-gray-600 mt-1">{t.location.parkingDesc}</p>
          </div>
          
          <div class="bg-gradient-to-br from-purple-50 to-pink-100 rounded-xl p-6">
            <svg class="w-8 h-8 text-purple-600 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <h4 class="font-semibold text-gray-900">{t.location.accessibility}</h4>
            <p class="text-sm text-gray-600 mt-1">{t.location.accessibilityDesc}</p>
          </div>
          
          <div class="bg-gradient-to-br from-orange-50 to-red-100 rounded-xl p-6">
            <svg class="w-8 h-8 text-orange-600 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <h4 class="font-semibold text-gray-900">{t.location.capacity}</h4>
            <p class="text-sm text-gray-600 mt-1">{t.location.capacityDesc}</p>
          </div>
        </div>
      </div>
      
      <div class="h-96 lg:h-full min-h-[400px] rounded-2xl overflow-hidden shadow-lg">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2443.6585859798344!2d20.98462631580052!3d52.22104397975899!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x471ecc8c92692e49%3A0x4615f8a7d4d0c88!2sKoszykowa%2061%2C%2000-667%20Warszawa!5e0!3m2!1sen!2spl!4v1647887123456!5m2!1sen!2spl"
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          class="w-full h-full"
        >
        </iframe>
      </div>
    </div>
  </div>
</section>