---
import LanguageSwitcher from './LanguageSwitcher.astro';
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang?: 'pl' | 'en';
  isMainPage?: boolean;
}

const { lang = 'pl', isMainPage = false } = Astro.props;
const t = getTranslations(lang);

// Main page navigation items (anchor links)
const mainPageNavItems = [
  { href: '#about', label: t.nav.about },
  { href: '#events', label: t.nav.events },
  { href: '#organizers', label: t.nav.organizers },
];

// Other pages navigation items (page links)
const otherPagesNavItems = [
  { href: lang === 'en' ? '/en' : '/', label: t.nav.home },
  { href: lang === 'en' ? '/en/events' : '/events', label: t.nav.events },
];

const navItems = isMainPage ? mainPageNavItems : otherPagesNavItems;
---

<nav class="fixed top-0 w-full bg-white backdrop-blur-md z-50 border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href={isMainPage ? '#home' : (lang === 'en' ? '/en' : '/')} class="flex items-center">
          <img
            src="/images/logo-transparent.png"
            alt="Warsaw Software Architecture Group Logo"
            class="h-14 w-auto"
          />
        </a>
      </div>
      
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map(item => (
          <a 
            href={item.href}
            class="text-gray-700 hover:text-primary transition-colors duration-200 text-sm font-medium"
          >
            {item.label}
          </a>
        ))}
        <div class="ml-4">
          <LanguageSwitcher currentLang={lang} currentPath={lang === 'en' ? '/en' : '/'} />
        </div>
      </div>
      
      <button class="md:hidden p-2" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100">
    <div class="px-2 pt-2 pb-3 space-y-1">
      {navItems.map(item => (
        <a 
          href={item.href}
          class="block px-3 py-2 text-gray-700 hover:text-primary hover:bg-gray-50 rounded-md text-base font-medium"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({ behavior: 'smooth' });
        mobileMenu?.classList.add('hidden');
      }
    });
  });
</script>