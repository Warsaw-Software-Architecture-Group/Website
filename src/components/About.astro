---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang?: 'pl' | 'en';
}

const { lang = 'pl' } = Astro.props;
const t = getTranslations(lang);
---

<section id="about" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        {t.about.title}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {t.about.subtitle}
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-6">{t.about.whatWeDo}</h3>
        <p class="text-gray-600 mb-6">
          {t.about.description1}
        </p>
        <p class="text-gray-600 mb-8">
          {t.about.description2}
        </p>
        
        <div class="space-y-4">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h4 class="font-semibold text-gray-900">{t.about.monthlyMeetups}</h4>
              <p class="text-gray-600 text-sm mt-1">{t.about.monthlyMeetupsDesc}</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h4 class="font-semibold text-gray-900">{t.about.knowledgeSharing}</h4>
              <p class="text-gray-600 text-sm mt-1">{t.about.knowledgeSharingDesc}</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h4 class="font-semibold text-gray-900">{t.about.networking}</h4>
              <p class="text-gray-600 text-sm mt-1">{t.about.networkingDesc}</p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-gradient-to-br from-blue-50 to-indigo-100 p-6 rounded-2xl">
          <svg class="w-10 h-10 text-blue-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          <h4 class="font-semibold text-gray-900 mb-2">{t.about.learn}</h4>
          <p class="text-gray-600 text-sm">{t.about.learnDesc}</p>
        </div>
        
        <div class="bg-gradient-to-br from-green-50 to-emerald-100 p-6 rounded-2xl">
          <svg class="w-10 h-10 text-green-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <h4 class="font-semibold text-gray-900 mb-2">{t.about.share}</h4>
          <p class="text-gray-600 text-sm">{t.about.shareDesc}</p>
        </div>
        
        <div class="bg-gradient-to-br from-purple-50 to-pink-100 p-6 rounded-2xl">
          <svg class="w-10 h-10 text-purple-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <h4 class="font-semibold text-gray-900 mb-2">{t.about.grow}</h4>
          <p class="text-gray-600 text-sm">{t.about.growDesc}</p>
        </div>
        
        <div class="bg-gradient-to-br from-orange-50 to-red-100 p-6 rounded-2xl">
          <svg class="w-10 h-10 text-orange-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          <h4 class="font-semibold text-gray-900 mb-2">{t.about.innovate}</h4>
          <p class="text-gray-600 text-sm">{t.about.innovateDesc}</p>
        </div>
      </div>
    </div>
    
    <div class="mt-16 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-3xl p-8 md:p-12">
      <div class="text-center text-white">
        <h3 class="text-2xl md:text-3xl font-bold mb-4">{t.about.whoShouldJoin}</h3>
        <div class="grid md:grid-cols-4 gap-6 mt-8">
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4">
            <div class="text-lg font-semibold mb-2">{t.about.softwareArchitects}</div>
            <div class="text-sm opacity-90">{t.about.softwareArchitectsDesc}</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4">
            <div class="text-lg font-semibold mb-2">{t.about.techLeads}</div>
            <div class="text-sm opacity-90">{t.about.techLeadsDesc}</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4">
            <div class="text-lg font-semibold mb-2">{t.about.seniorDevelopers}</div>
            <div class="text-sm opacity-90">{t.about.seniorDevelopersDesc}</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4">
            <div class="text-lg font-semibold mb-2">{t.about.ctosVps}</div>
            <div class="text-sm opacity-90">{t.about.ctosVpsDesc}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>