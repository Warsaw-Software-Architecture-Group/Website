---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang?: 'pl' | 'en';
}

const { lang = 'pl' } = Astro.props;
const t = getTranslations(lang);
---

<section id="about" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative pl-6">
      <!-- Decorative element -->
      <div class="absolute left-0 top-0 w-1 h-32 rounded-full" style="background-color: #29B7C0;"></div>

      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-12">
          {t.about.title}
        </h2>

        <div class="grid md:grid-cols-2 gap-12">
          <div>
            <p class="text-lg text-gray-600 leading-relaxed">
              {t.about.description1}
            </p>
          </div>
          <div>
            <p class="text-lg text-gray-600 leading-relaxed">
              {t.about.description2}
            </p>
          </div>
        </div>

        <!-- Format info -->
        <div class="mt-16 flex flex-wrap gap-8 text-gray-900">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold">{lang === 'pl' ? 'Drugi wtorek miesiąca' : 'Second Tuesday'}</div>
              <div class="text-sm text-gray-500">18:00 - 21:00</div>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold">{lang === 'pl' ? 'Warszawa' : 'Warsaw'}</div>
              <div class="text-sm text-gray-500">{lang === 'pl' ? 'spotkania stacjonarne' : 'in-person meetups'}</div>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold">{lang === 'pl' ? 'Bezpłatnie' : 'Free'}</div>
              <div class="text-sm text-gray-500">{lang === 'pl' ? 'otwarte dla wszystkich' : 'open to everyone'}</div>
            </div>
          </div>
        </div>
      </div>
  </div>
</section>