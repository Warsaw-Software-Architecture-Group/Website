---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { getTranslations } from '../i18n/translations';

const lang = 'pl';
const t = getTranslations(lang);
const lastUpdated = '4 października 2025';
---

<Layout title="Polityka prywatności - WSAG" description="Polityka prywatności Warsaw Software Architecture Group. Dowiedz się, jak chronimy Twoje dane osobowe i szanujemy Twoją prywatność." lang={lang}>
  <Navigation lang={lang} isMainPage={false} />
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/20 text-sm font-medium mb-6">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            Ochrona danych
          </div>
          <h1 class="text-4xl md:text-6xl font-bold mb-6">{t.privacy.title}</h1>
          <p class="text-xl opacity-90 max-w-3xl mx-auto leading-relaxed">
            {t.privacy.subtitle}
          </p>
          <p class="text-lg opacity-75 mt-4">
            {t.privacy.lastUpdated}: {lastUpdated}
          </p>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      
      <!-- Data Collection -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.privacy.sections.dataCollection.title}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p>{t.privacy.sections.dataCollection.content}</p>
        </div>
      </div>

      <!-- Data Use -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.privacy.sections.dataUse.title}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p class="mb-4">{t.privacy.sections.dataUse.content}</p>
          <ul class="space-y-2">
            {t.privacy.sections.dataUse.items.map(item => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Data Sharing -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-yellow-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.privacy.sections.dataSharing.title}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p>{t.privacy.sections.dataSharing.content}</p>
        </div>
      </div>

      <!-- Data Protection -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.privacy.sections.dataProtection.title}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p>{t.privacy.sections.dataProtection.content}</p>
        </div>
      </div>

      <!-- Cookies -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.privacy.sections.cookies.title}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p>{t.privacy.sections.cookies.content}</p>
        </div>
      </div>

      <!-- Your Rights -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.privacy.sections.rights.title}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p class="mb-4">{t.privacy.sections.rights.content}</p>
          <ul class="space-y-2">
            {t.privacy.sections.rights.items.map(item => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-red-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Privacy Contact -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.privacy.sections.contact.title}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p class="mb-4">{t.privacy.sections.contact.content}</p>
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="font-semibold text-gray-900">contact@wsag.org.pl</p>
          </div>
        </div>
      </div>

      <!-- Policy Changes -->
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.privacy.sections.changes.title}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p>{t.privacy.sections.changes.content}</p>
        </div>
      </div>
    </div>
  </div>

  <Footer lang={lang} />
</Layout>

<style>
  .prose {
    color: inherit;
  }
  
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }
  
  html {
    scroll-behavior: smooth;
  }
</style>