---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Events from '../components/Events.astro';
import VideoSlider from '../components/VideoSlider.astro';
import CallForPapers from '../components/CallForPapers.astro';
import Organizers from '../components/Organizers.astro';
import Footer from '../components/Footer.astro';

const lang = 'pl';
---

<Layout title="WSAG - Warsaw Software Architecture Group" description="Społeczność architektów oprogramowania w Warszawie. Miesięczne spotkania, warsztaty i networking dla profesjonalistów IT. Dołącz do nas!" lang={lang}>
  <Navigation lang={lang} isMainPage={true} />
  <main>
    <Hero lang={lang} />
    <About lang={lang} />
    <Events lang={lang} />
    <VideoSlider lang={lang} />
    <CallForPapers lang={lang} />
    <Organizers lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
