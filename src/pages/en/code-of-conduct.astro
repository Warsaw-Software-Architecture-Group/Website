---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getTranslations } from '../../i18n/translations';

const lang = 'en';
const t = getTranslations(lang);
---

<Layout title="Code of Conduct - WSAG" description="Warsaw Software Architecture Group's code of conduct ensures a welcoming, inclusive, and harassment-free environment for all community members." lang={lang}>
  <Navigation lang={lang} isMainPage={false} />
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/20 text-sm font-medium mb-6">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            Community Guidelines
          </div>
          <h1 class="text-4xl md:text-6xl font-bold mb-6">{t.codeOfConduct.title}</h1>
          <p class="text-xl opacity-90 max-w-3xl mx-auto leading-relaxed">
            {t.codeOfConduct.subtitle}
          </p>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      
      <!-- Our Commitment -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.codeOfConduct.ourCommitment}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p>
            {t.codeOfConduct.ourCommitmentText}
          </p>
        </div>
      </div>

      <!-- Our Standards -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.codeOfConduct.ourStandards}</h2>
        </div>
        <div class="mb-6">
          <p class="text-gray-600 text-lg mb-4">
            {t.codeOfConduct.ourStandardsText}
          </p>
          <ul class="space-y-3">
            {t.codeOfConduct.standardsList.map(standard => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">{standard}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="border-t border-gray-200 pt-6">
          <p class="text-gray-600 text-lg mb-4">
            {t.codeOfConduct.unacceptableBehavior}
          </p>
          <ul class="space-y-3">
            {t.codeOfConduct.unacceptableList.map(behavior => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-red-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">{behavior}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Scope -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.codeOfConduct.scope}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p>
            {t.codeOfConduct.scopeText}
          </p>
        </div>
      </div>

      <!-- Enforcement -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16l3-1m-3 1l-3-1"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.codeOfConduct.enforcement}</h2>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p>
            {t.codeOfConduct.enforcementText}
          </p>
        </div>
      </div>

      <!-- Reporting Violations -->
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.314 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">{t.codeOfConduct.reportingTitle}</h2>
        </div>
        
        <div class="prose prose-lg max-w-none text-gray-600 mb-6">
          <p>
            {t.codeOfConduct.reportingText}
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6 mb-6">
          <div class="bg-gray-50 rounded-xl p-6">
            <div class="flex items-center mb-3">
              <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <h3 class="font-semibold text-gray-900">{t.codeOfConduct.email}</h3>
            </div>
            <p class="text-gray-600 text-sm">conduct@wsag.org</p>
          </div>

          <div class="bg-gray-50 rounded-xl p-6">
            <div class="flex items-center mb-3">
              <svg class="w-6 h-6 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <h3 class="font-semibold text-gray-900">{t.codeOfConduct.phone}</h3>
            </div>
            <p class="text-gray-600 text-sm">+48 123 456 789<br/>(available during events)</p>
          </div>

          <div class="bg-gray-50 rounded-xl p-6">
            <div class="flex items-center mb-3">
              <svg class="w-6 h-6 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <h3 class="font-semibold text-gray-900">{t.codeOfConduct.inPerson}</h3>
            </div>
            <p class="text-gray-600 text-sm">Approach any member of the organizing team during the event</p>
          </div>
        </div>

        <div class="bg-blue-50 border border-blue-200 rounded-xl p-6">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">{t.codeOfConduct.confidentialityTitle}</h3>
              <p class="text-gray-600 text-sm">
                {t.codeOfConduct.confidentiality}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <Footer lang={lang} />
</Layout>

<style>
  .prose {
    color: inherit;
  }
  
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }
  
  html {
    scroll-behavior: smooth;
  }
</style>