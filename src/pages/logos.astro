---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
import LogoV1Circuit from '../components/LogoV1Circuit.astro';
import LogoV2Blocks from '../components/LogoV2Blocks.astro';
import LogoV3Network from '../components/LogoV3Network.astro';
import LogoV4Geometric from '../components/LogoV4Geometric.astro';
import { getTranslations } from '../i18n/translations';

const lang = 'pl';
const t = getTranslations(lang);
---

<Layout title="WSAG Logo Versions - Choose Your Favorite" lang={lang}>
  <div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          WSAG Logo Versions
        </h1>
        <p class="text-xl text-gray-600">
          Choose your favorite animated logo design for the Warsaw Software Architecture Group
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Original Version -->
        <div class="bg-white rounded-2xl shadow-lg p-8 text-center hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Original - Architecture Layers</h3>
          <div class="flex justify-center mb-6 p-8 bg-gray-50 rounded-xl">
            <Logo />
          </div>
          <div class="text-sm text-gray-600 space-y-2">
            <p><strong>Theme:</strong> Layered architecture</p>
            <p><strong>Elements:</strong> Stacked layers, connecting nodes, data flow</p>
            <p><strong>Animation:</strong> Breathing layers, pulsing nodes, flowing data</p>
          </div>
        </div>
        
        <!-- Version 1: Circuit Board -->
        <div class="bg-white rounded-2xl shadow-lg p-8 text-center hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">V1 - Circuit Board</h3>
          <div class="flex justify-center mb-6 p-8 bg-gray-50 rounded-xl">
            <LogoV1Circuit />
          </div>
          <div class="text-sm text-gray-600 space-y-2">
            <p><strong>Theme:</strong> Electronic circuits</p>
            <p><strong>Elements:</strong> PCB traces, chip components, dark background</p>
            <p><strong>Animation:</strong> Flowing electricity, blinking components</p>
          </div>
        </div>
        
        <!-- Version 2: Building Blocks -->
        <div class="bg-white rounded-2xl shadow-lg p-8 text-center hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">V2 - Building Blocks</h3>
          <div class="flex justify-center mb-6 p-8 bg-gray-50 rounded-xl">
            <LogoV2Blocks />
          </div>
          <div class="text-sm text-gray-600 space-y-2">
            <p><strong>Theme:</strong> Modular construction</p>
            <p><strong>Elements:</strong> Stacked blocks, foundation layers, crown piece</p>
            <p><strong>Animation:</strong> Floating blocks, scaling crown, dependencies</p>
          </div>
        </div>
        
        <!-- Version 3: Network Nodes -->
        <div class="bg-white rounded-2xl shadow-lg p-8 text-center hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">V3 - Network Nodes</h3>
          <div class="flex justify-center mb-6 p-8 bg-gray-50 rounded-xl">
            <LogoV3Network />
          </div>
          <div class="text-sm text-gray-600 space-y-2">
            <p><strong>Theme:</strong> Distributed systems</p>
            <p><strong>Elements:</strong> Central hub, peripheral nodes, data packets</p>
            <p><strong>Animation:</strong> Pulsing nodes, flowing connections, moving data</p>
          </div>
        </div>
        
        <!-- Version 4: Geometric Patterns -->
        <div class="bg-white rounded-2xl shadow-lg p-8 text-center hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">V4 - Geometric Patterns</h3>
          <div class="flex justify-center mb-6 p-8 bg-gray-50 rounded-xl">
            <LogoV4Geometric />
          </div>
          <div class="text-sm text-gray-600 space-y-2">
            <p><strong>Theme:</strong> Abstract architecture</p>
            <p><strong>Elements:</strong> Hexagons, triangles, squares, diamond</p>
            <p><strong>Animation:</strong> Rotating shapes, orbiting dots, scaling</p>
          </div>
        </div>
        
        <!-- Large Preview Area -->
        <div class="md:col-span-2 lg:col-span-1 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-2xl shadow-lg p-8 text-center text-white">
          <h3 class="text-lg font-semibold mb-4">{t.logos.allVersionsAtScale}</h3>
          <div class="space-y-6">
            <div class="flex justify-center items-center p-4 bg-white/10 rounded-xl">
              <div class="transform scale-150">
                <Logo />
              </div>
            </div>
            <div class="flex justify-center items-center p-4 bg-white/10 rounded-xl">
              <div class="transform scale-150">
                <LogoV1Circuit />
              </div>
            </div>
            <div class="flex justify-center items-center p-4 bg-white/10 rounded-xl">
              <div class="transform scale-150">
                <LogoV2Blocks />
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="mt-12 text-center">
        <div class="bg-white rounded-2xl shadow-lg p-8 max-w-2xl mx-auto">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Which Style Do You Prefer?</h3>
          <p class="text-gray-600 mb-6">
            Each logo represents different aspects of software architecture:
          </p>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div class="text-left space-y-2">
              <p><strong>Original:</strong> Traditional layered architecture</p>
              <p><strong>Circuit Board:</strong> Hardware/embedded systems</p>
              <p><strong>Building Blocks:</strong> Modular/component architecture</p>
            </div>
            <div class="text-left space-y-2">
              <p><strong>Network Nodes:</strong> Microservices/distributed systems</p>
              <p><strong>Geometric:</strong> Modern/abstract design patterns</p>
            </div>
          </div>
          <div class="mt-6">
            <a href="/" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">
              Back to Main Site
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>